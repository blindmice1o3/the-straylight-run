<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_refrigerator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_refrigerator"
    tools:context=".sequencetrainer.hotbar.refrigerator.RefrigeratorFragment">

    <com.jackingaming.thestraylightrun.sequencetrainer.hotbar.refrigerator.entities.Milk
        android:id="@+id/milk_two_percent"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/milk_whole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jackingaming.thestraylightrun.sequencetrainer.hotbar.refrigerator.entities.Milk
        android:id="@+id/milk_whole"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.jackingaming.thestraylightrun.sequencetrainer.hotbar.refrigerator.entities.Milk
        android:id="@+id/milk_oat"
        android:layout_width="48dp"
        android:layout_height="88dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/milk_coconut"
        app:layout_constraintStart_toEndOf="@id/milk_whole" />

    <com.jackingaming.thestraylightrun.sequencetrainer.hotbar.refrigerator.entities.Milk
        android:id="@+id/milk_coconut"
        android:layout_width="56dp"
        android:layout_height="112dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/milk_almond" />

    <com.jackingaming.thestraylightrun.sequencetrainer.hotbar.refrigerator.entities.Milk
        android:id="@+id/milk_almond"
        android:layout_width="56dp"
        android:layout_height="112dp"
        android:background="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/milk_soy" />

    <com.jackingaming.thestraylightrun.sequencetrainer.hotbar.refrigerator.entities.Milk
        android:id="@+id/milk_soy"
        android:layout_width="56dp"
        android:layout_height="112dp"
        android:background="@color/cream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_whipped_cream"
        android:layout_width="48dp"
        android:layout_height="88dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/milk_two_percent"
        app:layout_constraintEnd_toEndOf="@id/milk_almond"
        app:layout_constraintStart_toStartOf="@id/milk_almond" />

</androidx.constraintlayout.widget.ConstraintLayout>