<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sequencetrainer.hotbar.mastrena.dialogfragments.EspressoShotControlDialogFragment">

    <Button
        android:id="@+id/button_blonde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blonde"
        app:layout_constraintBottom_toTopOf="@id/button_single"
        app:layout_constraintEnd_toStartOf="@id/button_signature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signature"
        app:layout_constraintBottom_toTopOf="@id/button_single"
        app:layout_constraintEnd_toStartOf="@id/button_decaf"
        app:layout_constraintStart_toEndOf="@id/button_blonde"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_decaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decaf"
        app:layout_constraintBottom_toTopOf="@id/button_single"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_signature"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroup_amount_of_water"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/radiogroup_amount_of_bean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_single"
        app:layout_constraintTop_toBottomOf="@id/button_decaf">

        <RadioButton
            android:id="@+id/radiobutton_ristretto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R" />

        <RadioButton
            android:id="@+id/radiobutton_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radiogroup_amount_of_bean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_single"
        app:layout_constraintTop_toBottomOf="@id/radiogroup_amount_of_water">

        <RadioButton
            android:id="@+id/radiobutton_half_decaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1/2" />

        <RadioButton
            android:id="@+id/radiobutton_updosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="U" />
    </RadioGroup>

    <Button
        android:id="@+id/button_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="single"
        app:layout_constraintBottom_toTopOf="@id/button_double"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_blonde" />

    <Button
        android:id="@+id/button_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="double"
        app:layout_constraintBottom_toTopOf="@id/button_triple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_single" />

    <Button
        android:id="@+id/button_triple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="triple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_double" />

</androidx.constraintlayout.widget.ConstraintLayout>